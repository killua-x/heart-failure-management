<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_in">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="cursive"
        android:text="Heart"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/id"
        app:layout_constraintLeft_toLeftOf="@id/id" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="cursive"
        android:text="Carer"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/id"
        app:layout_constraintRight_toRightOf="@id/id" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="8dp"
        android:background="@mipmap/doctor"
        app:layout_constraintBottom_toTopOf="@id/id"
        app:layout_constraintLeft_toLeftOf="@id/id" />

    <EditText
        android:id="@+id/id"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_input1"
        android:digits="@string/id_restrict"
        android:drawableLeft="@mipmap/nickname"
        android:hint="id"
        android:padding="5dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_input1"
        android:drawableLeft="@mipmap/privacy_closed"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        android:background="@mipmap/button"
        android:text="Sign up"
        android:textColor="@color/fontcolor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <Button
        android:id="@+id/button_log_in"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        android:background="@mipmap/button"
        android:text="Log in"
        android:textColor="@color/fontcolor"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password" />
</androidx.constraintlayout.widget.ConstraintLayout>